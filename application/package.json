{
	"name": "webkit-app-radio",
	"main": "index.html",
	"author": "ProjectSoft",
	"license": "MIT",
	"homepage": "https://projectsoft.ru/",
	"version": "2.0.2",
	"nodejs": true,
	"winIco": "favicon.ico",
	"chromium-args": "--child-clean-exit --ignore-certificate-errors --disk-cache-size=1 --media-cache-size=1 --disable-web-security --use-strict=true",
	"page-cache": false,
	"default_locale": "en",
	"webkit": {
		"plugin": true
	},
	"window": {
