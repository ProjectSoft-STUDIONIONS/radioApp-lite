// Пока уберём Визуализатор
doctype html
html
	head
		meta(http-equiv="Content-Type" content="text/html; charset=UTF-8")
		meta(name="viewport" content="width=device-width, initial-scale=1")
		base(href="/")
		title MilkDrop Visualizer
		style
			|body {
			|	margin: 0;
			|	overflow: hidden;
			|	background-color: black;
			|}
			|canvas {
			|	display: inline-block;
			|	width: 100%;
			|	height: 100%;
			|	overflow: hidden;
			|}
			|#noAudioOverlay {
			|	display: none;
			|	justify-content: center;
			|	align-items: center;
			|	position: absolute;
			|	top: 0;
			|	left: 0;
			|	overflow: hidden;
			|	width: 800px;
			|	height: 600px;
			|	background-color: rgba(255, 255, 255, 0.5);
			|}
			|#noAudioOverlay p {
			|	font-size: 20px;
			|	color: black;
			|	text-align: center;
			|}
		script(src="butterchurn/lib/butterchurn.min.js")
		script(src="butterchurn/lib/butterchurnPresetsAll.min.js")
		script(src="butterchurn/lib/imageData.min.js")
		script(src="butterchurn//visualizer.js")
	body
		div#noAudioOverlay
			p
				|Audio is not currently playing
				br
				|Note: Extension works with individual tabs, not across all tabs
		canvas(id="canvas" width="800" height="600")
